:number1 = AddLeadingCharacters(number1, '0', maxNumber - number1.Length);
:number2 = AddLeadingCharacters(number2, '0', maxNumber - number2.Length);
:int i = number1.Length - 1;
while (i >= 0) is (yes)
    if (sum < 10) then (yes)
        :result = sum.ToString() + result;
        :carry = false;
