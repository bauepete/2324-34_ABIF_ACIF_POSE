@startuml Program.SumOfDigits
title Program.SumOfDigits
start
#LightBlue:int result = 0;
#LightBlue:int i = 0;
while (i < text.Length) is (<color:green>yes)
    if (Char.IsDigit(text[i])) then (<color:green>yes)
        :result += text[i] - '0';
    endif
:i++;
endwhile (<color:red>no)
#Lavender:return result;
stop
@enduml
